<p class="font-weight-bold"> Edit article </p>

<%= form_for @form, url: article_path, method: "put" do |f| %>
  <%= render partial: "shared" %>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.text_field :category, value: @article.category %>
  </div>

  <div class="form-group">
    <%= f.label :tags %>
    <%= f.fields_for :article_tags do |tags_form| %>
      <%= tags_form.select :tag_ids,
        Tag.pluck(:name, :id),
        {include_hidden: false, selected: @article.article_tags.map { |t| t.tag.id }},
        {class: "selectpicker", multiple: true, data: {live_search: 'true'}}
      %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= rich_text_area_tag "articles_base_form[content]", @article.content || f.object.content %>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>