<tr>
  <th scope="row"><%= article.id %></th>
  <td><%= article.category %></td>
  <td><%= article.tags.pluck(:name).join(', ') %></td>
  <td>
    <%= link_to 'View', article_path(article.id)%>
  </td>
  <td colspan="2"><%= truncate(article.content.body, length: 100, escape: false).html_safe %></td>
</tr>